<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/menu_readNfc"
        style="@style/style_main_menu_linear"
        >

        <ImageView
            android:src="@mipmap/menu_readnfc"
            style="@style/style_main_menu_image"
            android:scaleX="0.9"
            />

        <TextView
            android:text="写入医通卡号"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_fingerPrint"
        style="@style/style_main_menu_linear"

        android:visibility="gone"
        >

        <ImageView
            android:src="@mipmap/menu_finger_print"
            style="@style/style_main_menu_image"
            android:scaleX="0.9"
            />

        <TextView
            android:text="录入指纹"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"

        android:id="@+id/menu_readZXing"
        style="@style/style_main_menu_linear">

        <ImageView
            android:src="@mipmap/menu_readzxing"
            style="@style/style_main_menu_image"
            />

        <TextView
            android:text="扫描医通卡一维码"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_menuClear"
        android:gravity="center"
        style="@style/style_main_menu_linear"
        >

        <ImageView
            android:src="@mipmap/menu_clear"
            style="@style/style_main_menu_image"
            />

        <TextView
            android:text="清除缓存"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_menuSetting"
        android:gravity="center"
        style="@style/style_main_menu_linear"
        >

        <ImageView
            android:src="@mipmap/menu_setting"
            style="@style/style_main_menu_image"
            />

        <TextView
            android:text="设置"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        style="@style/style_main_menu_linear">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            style="@style/style_main_menu_image"
            />

        <Button
            android:id="@+id/menu_exit"
            android:text="退出当前账号"
            android:textColor="@color/red"
            android:gravity="center"
            style="@style/style_main_menu_text"
            />

    </LinearLayout>


</LinearLayout>