<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/login_top_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            style="@style/style_login_child_linear"
            >

            <ImageView
                style="@style/style_login_image"
                android:src="@mipmap/login_user"/>

            <EditText
                android:id="@+id/userName"
                android:hint="用户名"
                style="@style/style_login_edit"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            style="@style/style_login_child_linear"
            >

            <ImageView
                style="@style/style_login_image"
                android:src="@mipmap/login_passwad"/>

            <EditText
                android:id="@+id/password"
                android:hint="密码"
                android:inputType="textPassword"
                style="@style/style_login_edit"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            style="@style/style_login_child_linear"
            >

            <CheckBox
                android:id="@+id/rememberPassword"
                android:text="记住密码"
                style="@style/style_login_check"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        >

        <Button
            android:id="@+id/login_btn"
            android:text="登录"
            style="@style/style_login_button"
             />

    </LinearLayout>

</LinearLayout>