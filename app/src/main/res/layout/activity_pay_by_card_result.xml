<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/card_result_main"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/linearLayoutCreateKeyMapKeyFiles"
                android:visibility="gone"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textViewCreateKeyMapFromTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="@string/text_sector_range_all"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/pay_background"
                    android:src="@mipmap/pay_by_card_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="@dimen/text_16"
                    android:gravity="center"
                    android:text="提示：请将医通卡放置在手机背部"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <TextView
                android:id="@+id/EnrollmentTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/RelativeLayout02"
                android:gravity="center_vertical|center_horizontal"
                />

        </LinearLayout>


        <Button
            android:id="@+id/scan_button"
            android:text="扫码打卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:background="@drawable/shape_blue_line"
            android:layout_margin="30dp"

            />

    </FrameLayout>



</LinearLayout>