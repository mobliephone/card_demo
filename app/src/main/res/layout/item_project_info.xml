<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:background="@drawable/shape_white_line"
                style="@style/style_pro_item_linear"
                >

                <LinearLayout
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        style="@style/style_pro_item_imageview"

                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/pro_Name"
                        android:text="项目名称 :儿童甲状腺疾病的诊治进展"
                        style="@style/style_pro_item_title_textview"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        style="@style/style_pro_item_imageview"

                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/pro_CourseName"
                        android:text="开始时间:2017-11-30"
                        android:textColor="@color/textGray"
                        style="@style/style_pro_item_textview"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        style="@style/style_pro_item_imageview"

                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/pro_mane"
                        android:text="开始时间:2017-11-30"
                        android:textColor="@color/textGray"
                        style="@style/style_pro_item_textview"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        style="@style/style_pro_item_imageview"

                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/pro_holdUnit"
                        android:text="主办单位:海西州人民医院"
                        android:textColor="@color/textGray"
                        style="@style/style_pro_item_textview"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/pro_Source"
                        android:src="@mipmap/credit_one"
                        android:scaleType="fitXY"
                        style="@style/style_score_icon"
                        />

                    <Button
                        android:id="@+id/pro_punchCard"
                        android:text="打 卡"
                        android:background="@drawable/shape_blue_line"
                        style="@style/style_score_button"

                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <com.framework.widget.ui.LabelView
            android:id="@+id/lable"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:visibility="gone"
            lv:lv_background_color="#FF6666"
            lv:lv_gravity="TOP_LEFT"
            lv:lv_text="新增完成"
            lv:lv_text_size="8dp"
            />

    </FrameLayout>
</LinearLayout>