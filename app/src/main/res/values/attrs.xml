<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LabelView">
        <!-- 设置文字内容 -->
        <attr name="lv_text" format="string"/>
        <!-- 设置文字颜色,默认#ffffff -->
        <attr name="lv_text_color" format="color"/>
        <!-- 设置文字大小,默认11sp -->
        <attr name="lv_text_size" format="dimension"/>
        <!-- 设置文字是否支持加粗,默认true -->
        <attr name="lv_text_bold" format="boolean"/>
        <!-- 设置文字是否支持全部大写,默认true-->
        <attr name="lv_text_all_caps" format="boolean"/>
        <!-- 设置背景颜色,默认"#FF4081"-->
        <attr name="lv_background_color" format="color"/>
        <!-- 设置LabelView所在矩形最小宽高,默认mFillTriangle?35dp:50dp-->
        <attr name="lv_min_size" format="dimension"/>
        <!-- 设置文字上下padding,默认3.5dp,mFillTriangle为true时无效-->
        <attr name="lv_padding" format="dimension"/>
        <!-- 设置LabelView方向 -->
        <attr name="lv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51"/>
            <enum name="TOP_RIGHT" value="53"/>
            <enum name="BOTTOM_LEFT" value="83"/>
            <enum name="BOTTOM_RIGHT" value="85"/>
        </attr>
        <!-- 设置是否填充三角区域,默认false -->
        <attr name="lv_fill_triangle" format="boolean"/>
        <!-- 设置是否浮嵌显示大小 -->
        <attr name="lv_fill_size" format="integer"/>
    </declare-styleable>


    <!-- FloatingLable -->
    <declare-styleable name="FloatingLabel">
        <attr name="floatHintText" format="string" />
        <attr name="floatHintTextColorFocused" format="color" />
        <attr name="floatHintTextColorUnFocused" format="color" />
        <attr name="floatHintTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="floatHintTextGravity">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
        </attr>
        <attr name="floatHintTextSize" format="integer" />
        <attr name="floatHintTextTypeface" format="string" />
        <attr name="floatHintTextBackground" format="color|reference" />

        <!-- For actual Text -->
        <attr name="text" format="string" />
        <attr name="textColor1" format="color" />
        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="textNumberStyle">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
            <enum name="sz" value="2" />
            <enum name="phone" value="3" />
        </attr>
        <attr name="textSize1" format="integer" />
        <attr name="textTypeface" format="string" />
        <attr name="textBackground" format="color|reference" />
        <attr name="isPassword" format="boolean" />
        <attr name="isEditable" format="boolean" />
        <attr name="isFocusableInTouchMode" format="boolean" />
    </declare-styleable>
    <!--自定义开关按钮-->
    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean"/>
        <attr name="primaryColor" format="color"/>
        <attr name="primaryColorDark" format="color"/>
        <attr name="isOpened" format="boolean"/>
    </declare-styleable>
</resources>