<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--bottom dialog-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appTextStyle">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="textStyle_weight_1_size_14">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="appTextStyle_14">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="SettingsCellSingleCompoundButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">@color/textGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dip</item>
    </style>

    <style name="Transparent" parent="android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--三级菜单-->
    <style name="dialog_change_card" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="RegDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/attention_guide_in</item>
        <item name="android:windowExitAnimation">@anim/attention_guide_out</item>
    </style>

    <!--Tablayout字体大小-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--主界面RadioButton布局-->
    <style name="style_main_radioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/content_text_selector</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!--灰色分割线-->
    <style name="style_gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/textGray</item>
    </style>

    <!--项目管理->输入框父布局-->
    <style name="style_project_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:weightSum">10</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--项目管理-> Spinner父布局-->
    <style name="style_project_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--项目管理->项目编码-->
    <style name="style_project_textview">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!--项目管理->分割线-->
    <style name="style_project_view">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <!--项目管理->输入框-->
    <style name="style_project_edittext">
        <item name="android:layout_weight">7</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <!--项目管理Button-->
    <style name="style_project_button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!--项目管理item Linear-->
    <style name="style_pro_item_linear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--项目管理item TextView-->
    <style name="style_pro_item_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="style_pro_item_title_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <!--项目管理item TextView-->
    <style name="style_pro_item_imageview">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!--FloatingLable布局-->
    <style name="style_label_float">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--编辑界面的Button-->
    <style name="style_label_button">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <!--CMEActivity课题界面的学分ImageView-->
    <style name="style_score_icon">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--CMEActivity课题界面的打卡的Button-->
    <style name="style_score_button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--LoginActivity登录界面的ImageView-->
    <style name="style_login_image">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--LoginActivity登录界面的EditText-->
    <style name="style_login_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <!--LoginActivity登录界面的Button-->
    <style name="style_login_button">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:background">@drawable/shape_blue_login</item>
    </style>

    <!--LoginActivity登录界面的子LinearLayout-->
    <style name="style_login_child_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--登录界面的checkbox-->
    <style name="style_login_check">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <!--侧滑菜单的子LinearLayout-->
    <style name="style_main_menu_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--侧滑菜单的图标ImageView-->
    <style name="style_main_menu_image">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--侧滑菜单的标题TextView-->
    <style name="style_main_menu_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--WriteCardActivity的父LinearLayout-->
    <style name="style_write_card_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <!---WriteCardActivity的提示语TextView-->
    <style name="style_write_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <!--WriteCardActivity的FloatingLable-->
    <style name="style_write_card_lable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--WriteCardActivity的Button-->
    <style name="style_write_card_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_blue_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--以Dialog显示Activity-->
    <style name="CustomActivityDialogStyle" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有标题栏-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--CardRecordActivity的TextView-->
    <style name="style_card_record_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Setting-->
    <style name="style_setting_title" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="style_setting_linear" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="style_setting_child_title" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
